<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NewsAuthorDateTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/author_date_text_view_layout_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/author_date_text_view_layout_marginRight</item>
        <item name="android:layout_marginBottom">@dimen/author_date_text_view_layout_marginBottom</item>
        <item name="android:textSize">@dimen/author_date_text_view_text_size</item>
    </style>

</resources>
